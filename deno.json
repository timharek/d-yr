{
  "tasks": {
    "run": "deno run --allow-net=api.met.no,nominatim.openstreetmap.org src/cli.ts"
  },
  "compilerOptions": {
    "types": [
      "./mod.d.ts"
    ]
  },
  "lint": {
    "include": [
      "src/",
      "types/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-function-return-type"
      ]
    }
  },
  "fmt": {
    "include": [
      "./"
    ],
    "exclude": [
      "README.md"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
}