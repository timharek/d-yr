{
  "lint": {
    "files": {
      "include": ["src/", "types/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },

  "tasks": {
    "run": "deno run --allow-net --allow-read --allow-env mod.ts"
  }
}
