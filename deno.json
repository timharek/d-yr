{
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/", "types/"]
    },
    "rules": {
      "tags": ["recommended"],
    }
  },
  "fmt": {
    "files": {
      "include": ["src/", "types/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
